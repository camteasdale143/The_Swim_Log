<% include ../partials/header %>

     <h1>Edit <%= moment(log.date).format("LL") %> Log</h1>
<form action="/logs/<%= log._id %>?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control text-input"type="date" name="log[date]" value="<%= moment(log.date).format('YYYY-MM-DD') %>">
    </div>
    <div class="form-group">
        <label>Todays Meals</label>
        <textarea rows="10" class="form-control text-area" name="log[food]" placeholder="food"><%= log.food %></textarea>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <label>Sleep Hour</label>
            <input class="form-control text-input" type="text" name="log[sleepHour]" value="<%= log.sleepHour %>" placeholder="sleepHour">
            <% console.log("Test") %>
            <% console.log(log.sleepHour) %>
        </div>
        <div class="col-md-6">
            <label>Wake Hour</label>
            <input class="form-control text-input" type="text" name="log[wakeHour]" value="<%= log.wakeHour %>" placeholder="wakeHour">
        </div>
    </div>
    <div class="form-group">
        <label>Cups of water</label>
        <input class="form-control text-input" type="number" name="log[water]" value="<%= log.water %>" placeholder="4">
    </div>
    <div class="form-group">
        <label>Practice</label>
        <textarea rows="10" class="form-control text-area" name="log[practice]" placeholder="practice"><%= log.practice %></textarea>
    </div>
    <div class="form-group">
        <label>Comments</label>
        <textarea rows="10" class="form-control text-area" name="log[comments]" placeholder="comments"><%= log.comments %></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-large btn-default btn-block btn-primary">Update</button>
    </div>
</form>

<% include ../partials/footer %>
