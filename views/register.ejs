<% include ./partials/header %>

<div class="formWidth">
    <h1 class="text-center">Sign Up</h1>
    <form action="/register" method="post">
        <hr>
        <div class="form-group">
            <p class="text-center"><b>I am a </b></p>
        </div>
        <div class="form-check form-check-inline" style="margin-bottom: 10px;">
            <input class="form-check-input" type="radio" name="coach" id="option1" value="false" checked>
            <label class="form-check-label" for="option1" style="padding-right:10px">Swimmer</label>
            <input class="form-check-input" type="radio" name="coach" id="option2" value="true"> 
            <label class="form-check-label" for="option2">Coach</label>
        </div>
        <div class="form-group">
            <input type="email" placeholder="email" name="email" class="form-control" required>
        </div>
        <div class="form-group row">
            <div class="col-md-6 col-xs-6">
                <input type="text" placeholder="first name" name="firstName" class="form-control" required>
            </div>
            <div class="col-md-6 col-xs-6">
                <input type="text" placeholder="last name" name="lastName" class="form-control" required>
            </div>
        </div>
        <div class="form-group">
            <input id="username" type="text" placeholder="username" name="username" class="form-control" required>
            <div id="username-sub-text">
                
            </div>
        </div>
        <div class="form-group">
            <input type="password" placeholder="password" name="password" class="form-control" pattern=".{5,}" required>
            <small>Must be at least 5 characters long</small>
        </div>
        
        <div class="form-group" id="formButton">
            <button  class="btn btn-large btn-default btn-block btn-primary" disabled>Sign Up</button>
        </div>
        <a href="/">back</a>
        
    </form>
</div>

<% include ./partials/registerFooter %>
